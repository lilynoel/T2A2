<p id="notice"><%= notice %></p>

<div>
<% if @listing.picture.attached? %>
  <%= image_tag @listing.picture, alt: @listing.name %>
<% else %>
  <%= image_tag "https://placedog.net/400/500?r", alt: @listing.name %>
<% end %>
</div>

<p>
  <strong>Name:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @listing.breed %>
</p>

<p>
  <strong>Location:</strong>
  <%= @listing.location %>
</p>

<p>
  <strong>Fee:</strong>
  <%= @listing.fee %>
</p>

<p>
  <strong>Available:</strong>
  <%= @listing.available %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category_id %>
</p>
<% if current_user.id == @listing.user_id %>
  <%= link_to 'Edit', edit_listing_path(@listing) %>
<% end %>
<%= link_to 'Back', listings_path %>
